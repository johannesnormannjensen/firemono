{
  "name": "demo-firebase",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "tags": [
    "type:firebase",
    "scope:demo",
    "platform:firebase",
    "feature:functions",
    "feature:firestore",
    "feature:hosting",
    "feature:emulators"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx build demo-functions"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Linting skipped - Firebase config project with no source files to lint'"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'No tests for firebase project - delegates to function projects'"
      }
    },
    "firebase": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "forwardAllArgs": true,
        "command": "firebase"
      }
    },
    "killports": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx -y kill-port --port 5001,8080,5000,9099"
      }
    },
    "emulators:start": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase emulators:start --only=functions,firestore,hosting,auth --import=./emulator-data --export-on-exit=./emulator-data"
      }
    },
    "emulators:debug": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase emulators:start --inspect-functions --only=functions,firestore,hosting,auth --import=./emulator-data --export-on-exit=./emulator-data"
      }
    },
    "emulators:stop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx -y kill-port --port 5001,8080,5000,9099"
      }
    },
    "getconfig": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase --config=firebase.json functions:config:get > .runtimeconfig.json"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase deploy"
      },
      "dependsOn": ["build"]
    },
    "deploy-functions": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase deploy --only functions"
      },
      "dependsOn": ["build"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build demo-functions --watch",
          "cd apps/demo/firebase && firebase emulators:start --only=functions,firestore,hosting,auth --import=./emulator-data --export-on-exit=./emulator-data"
        ],
        "parallel": true
      }
    },
    "data:export": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase emulators:export ./emulator-data --force"
      }
    },
    "data:import": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase emulators:start --import=./emulator-data --export-on-exit=./emulator-data"
      }
    },
    "data:seed": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "echo \"Add your data seeding script here\""
      }
    },
    "logs": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase functions:log"
      }
    }
  }
}

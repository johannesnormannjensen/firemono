{
  "name": "demo-firebase",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "tags": [
    "type:firebase",
    "scope:demo",
    "platform:firebase",
    "feature:functions",
    "feature:firestore",
    "feature:hosting",
    "feature:emulators"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx build demo-functions"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run-many --target=test --projects=tag:scope:demo"
      }
    },
    "firebase": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "forwardAllArgs": true,
        "command": "firebase"
      }
    },
    "killports": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx -y kill-port --port 5001,8080,5000,9099"
      }
    },
    "emulators:start": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "mkdir -p exports && if [ -d \"exports\" ] && [ \"$(ls -A exports)\" ]; then firebase emulators:start --only=functions,firestore,hosting,auth --import=./exports; else firebase emulators:start --only=functions,firestore,hosting,auth; fi"
      }
    },
    "emulators:debug": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "mkdir -p exports && if [ -d \"exports\" ] && [ \"$(ls -A exports)\" ]; then firebase emulators:start --inspect-functions --only=functions,firestore,hosting,auth --import=./exports; else firebase emulators:start --inspect-functions --only=functions,firestore,hosting,auth; fi"
      }
    },
    "emulators:stop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx -y kill-port --port 5001,8080,5000,9099"
      }
    },
    "getconfig": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase --config=firebase.json functions:config:get > .runtimeconfig.json"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase deploy"
      },
      "dependsOn": ["build"]
    },
    "deploy-functions": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase deploy --only functions"
      },
      "dependsOn": ["build"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build demo-functions --watch",
          "cd apps/demo/firebase && mkdir -p exports && firebase emulators:start --only=functions,firestore,hosting,auth"
        ],
        "parallel": true
      }
    },
    "data:export": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase emulators:export ./exports --force"
      }
    },
    "data:import": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase emulators:start --import=./exports --export-on-exit=./exports"
      }
    },
    "data:seed": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "echo \"Add your data seeding script here\""
      }
    },
    "logs": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/demo/firebase",
        "command": "firebase functions:log"
      }
    }
  }
}
